{
    "install": "pip3 install --user -r requirements.txt", 
    "start": "export FLASK_APP=app.py && export FLASK_DEBUG=1 && flask run",
    "watch": {
      "ignore": [
        "\\.pyc$"
      ],
      "install": {
        "include": [
          "requirements.txt"
        ]
      },
      "restart": {
        "include": [
          "\\.py$",
          "^start\\.sh"
        ]
      },
      "throttle": 5000
    }
  }
  